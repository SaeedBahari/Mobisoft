<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/poster_details_img"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/rate_details_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="8.5"
        android:background="@drawable/bg_rating"
        android:textColor="@android:color/black"
        android:layout_margin="4dp"
        app:layout_constraintTop_toTopOf="@+id/poster_details_img"
        app:layout_constraintEnd_toEndOf="parent"
       />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title_details_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="title"
        android:textColor="@android:color/holo_orange_dark"
        app:layout_constraintBottom_toBottomOf="@+id/poster_details_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/director_title_details_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:text="Directors"
        android:textSize="12sp"
        android:textColor="@android:color/holo_orange_dark"
        app:layout_constraintTop_toBottomOf="@+id/poster_details_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/director_details_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:layout_marginTop="4dp"
        android:text="DirectorsDirectorsDirectorsDirectorsDirectors"
        android:textSize="14sp"
        android:textColor="@android:color/holo_orange_dark"
        app:layout_constraintTop_toBottomOf="@+id/director_title_details_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/actors_title_details_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:layout_marginTop="16dp"
        android:textSize="12sp"
        android:text="Actors"
        android:textColor="@android:color/holo_orange_dark"
        app:layout_constraintTop_toBottomOf="@+id/director_details_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/actors_details_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:layout_marginTop="4dp"
        android:text="Actors"
        android:textSize="14sp"
        android:textColor="@android:color/holo_orange_dark"
        app:layout_constraintTop_toBottomOf="@+id/actors_title_details_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/plot_details_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:layout_marginTop="16dp"
        android:text="plot"
        android:textColor="@android:color/holo_orange_dark"
        app:layout_constraintTop_toBottomOf="@+id/actors_details_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>